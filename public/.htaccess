<IfModule mod_rewrite.c>

  RewriteEngine On
  RewriteBase /
  DirectorySlash Off
  # remove trailing slash
  RewriteRule ^(.*)\/(\?.*)?$ $1$2 [R=301,L]
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]

</IfModule>